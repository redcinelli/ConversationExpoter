extends layout

block content
  h1= title
  p Welcome to #{title}

  form(action='/api/listworkspace')
            div.form-group
              label(for='name') Conversation username:
              input#username.form-control(type='text',  name='username')
            div.form-group
              label(for='pw') Conversation Password:
              input#password.form-control(type='password' ,name='password')
            button.btn.btn-primary(type='button' id='triggerGW') Sign up

  form(id='jsonfile', name='jsonfile', enctype='multipart/form-data')
            h2 JSON File
            input(type='file' id='fileinput')
            input(type='button' id='btnLoad' value='Load' onclick='loadFile();')
  div(id='result')
